# Enterprise OpenClaw Configuration

# LLM Provider Configuration (at least one required)
# Priority: AI Refinery > Anthropic if both set

# Anthropic API Key
ANTHROPIC_API_KEY=your-anthropic-api-key-here

# AI Refinery Configuration (Accenture internal)
# Get API key from: https://sdk.airefinery.accenture.com/
AIR_API_KEY=your-airefinery-api-key-here
AIR_BASE_URL=https://api.airefinery.accenture.com
# For v2 API with enhanced observability (recommended)
USE_AIR_API_V2_BASE_URL=true

# Server Configuration
PORT=8789
HOST=127.0.0.1

# Orchestrator Settings
MAX_CONCURRENT_TASKS=5
TASK_TIMEOUT_MS=300000

# Improvement Engine
MIN_PATTERN_FREQUENCY=3
AUTO_OPTIMIZE=true

# Security
ENABLE_PII_DETECTION=true
ENABLE_AUDIT_LOGGING=true

# Data Directories
DATA_DIR=./data
METRICS_DIR=./data/metrics
AUDIT_LOG_DIR=./data/audit-logs
IMPROVEMENT_DIR=./data/improvement
